{% extends 'base.html.twig' %}

{% block title %}Liste des catégories
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Liste des catégories ✅</h1>

		{% for category in categories %}
			<div>
				<h2>{{ loop.index }}
					/
					{{ category.name }}

					<a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la fiche</a>
				</div>
			{% else %}
				Aucune catégorie trouvée.
			{% endfor %}

			<a href="{{ path('app_index') }}">
				Retour à l'accueil
			</a>
		{% endblock %}
