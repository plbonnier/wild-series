{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block body %}
	<div class="media">
		<div class="media-body">
			<img src="{{ vich_uploader_asset(actor) }}" alt="{{ actor.name }}">
			<h1 class="mt-0">{{ actor.name }}</h1>
			<p>Listes des séries dans lequel il joue :</p>
			<ul>
				{% for program in actor.programs %}
					<li>

						<a href="{{ path("program_show", { slug: program.slug }) }}">{{program.title}}</a>
					</li>
				{% else %}
					<li>Aucune série pour cette acteur</li>
				{% endfor %}
			</ul>
		</div>
	</div>

	<a href="{{ path('actor_index') }}">
		Retour à la liste des acteurs
	</a>
	{# {{ include('program/_delete_form.html.twig') }} #}
{% endblock %}
